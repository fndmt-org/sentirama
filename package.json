{
  "name": "sentirama",
  "version": "0.0.0",
  "description": "No violent comunication feelings catalog",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:fndmt-org/sentirama.git"
  },
  "keywords": [
    "website",
    "firebase",
    "redux",
    "react"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy:production": "npm run build && firebase deploy",
    "deploy:test": "GIT_SHA=$(git rev-parse --short HEAD) && npm run build && firebase hosting:channel:deploy $GIT_SHA",
    "translate": "npm run extract -- 'src/**/*.js*' --out-file src/lang/default.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "extract": "formatjs extract",
    "check-master": "git symbolic-ref --short HEAD | grep ^master$ > /dev/null || (echo \"Not in 'master' branch. Aborting release\"; return 1)",
    "prerelease": "npm ci && npm run lint && npm run check-master && npm run test:ci",
    "changelog": "npm run prerelease && changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md'",
    "release:patch": "npm run changelog && npm version patch",
    "release:minor": "npm run changelog && npm version minor",
    "release:major": "npm run changelog && npm version major"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "fundament.es",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fndmt-org/sentirama/issues?q=is%3Aissue+is%3Aopen+sort%3Aupdated-desc"
  },
  "homepage": "https://corona-mood.firebaseapp.com/",
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "babel-plugin-formatjs": "^9.1.0",
    "firebase": "^8.2.7",
    "formatjs": "^0.1.1",
    "moment": "^2.29.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-intl": "^5.12.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.2",
    "recompose": "^0.30.0",
    "styled-components": "^5.2.1",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@formatjs/cli": "^3.1.0",
    "generate-changelog": "^1.8.0",
    "jest-styled-components": "^7.0.3",
    "match-media-mock": "^0.1.1",
    "react-intl-cra": "^0.2.12",
    "react-intl-translations-manager": "^5.0.3",
    "react-test-renderer": "^17.0.1"
  }
}
